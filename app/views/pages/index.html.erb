<!-- ========================================================= -->
<!-- ヒーローセクション -->
<!-- ========================================================= -->
<section class="bg-white py-20 text-center">

  <div class="max-w-4xl mx-auto px-4">

    <!-- キャッチコピー -->
    <h1 class="text-5xl font-extrabold text-gray-900 mb-6">
      甘えを可視化する
    </h1>

    <!-- サブコピー -->
    <p class="text-xl text-gray-600 mb-10">
      習慣 × PDCA で目標達成を加速
    </p>

    <!-- CTAボタン -->
    <% if logged_in? %>
      <%= link_to "ダッシュボードへ",
                  root_path,
                  class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition duration-200" %>
    <% else %>
      <%= link_to "今すぐ始める",
                  new_user_path,
                  class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition duration-200" %>
    <% end %>

  </div>
</section>


<!-- ========================================================= -->
<!-- 価値説明セクション（3つの特徴） -->
<!-- ========================================================= -->
<section class="bg-gray-50 py-16">

  <div class="max-w-6xl mx-auto px-4">

    <h2 class="text-3xl font-bold text-center mb-12">
      価値説明（3つの特徴）
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

      <!-- カード1 -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold mb-3">
          1. 続かない理由が分かる
        </h3>
        <p class="text-gray-600 text-sm leading-relaxed">
          週次振り返りで「できなかった理由」を記録<br>
          AIが本質的な原因を分析
        </p>
      </div>

      <!-- カード2 -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold mb-3">
          2. 計画倒れを防ぐ
        </h3>
        <p class="text-gray-600 text-sm leading-relaxed">
          毎週必ず振り返りを強制<br>
          甘えを許さないロック機能
        </p>
      </div>

      <!-- カード3 -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold mb-3">
          3. 自動で最適化される
        </h3>
        <p class="text-gray-600 text-sm leading-relaxed">
          AI分析に基づく改善提案<br>
          ワンクリックで計画を更新
        </p>
      </div>

    </div>
  </div>
</section>


<!-- ========================================================= -->
<!-- 利用フロー -->
<!-- ========================================================= -->
<section class="bg-white py-16">

  <div class="max-w-6xl mx-auto px-4">

    <h2 class="text-3xl font-bold text-center mb-12">
      利用フロー
    </h2>

    <div class="flex flex-col md:flex-row items-center justify-between gap-6 bg-gray-50 border rounded-lg p-6">

      <div class="flex-1 text-center">
        <div class="font-bold mb-2">平日</div>
        <div class="text-sm text-gray-600">習慣チェック・タスク管理</div>
      </div>

      <div class="text-gray-400 text-2xl">→</div>

      <div class="flex-1 text-center">
        <div class="font-bold mb-2">週末</div>
        <div class="text-sm text-gray-600">振り返り入力</div>
      </div>

      <div class="text-gray-400 text-2xl">→</div>

      <div class="flex-1 text-center">
        <div class="font-bold mb-2">AI分析</div>
        <div class="text-sm text-gray-600">真の原因を究明</div>
      </div>

      <div class="text-gray-400 text-2xl">→</div>

      <div class="flex-1 text-center">
        <div class="font-bold mb-2">計画更新</div>
        <div class="text-sm text-gray-600">改善提案を自動反映</div>
      </div>

    </div>
  </div>
</section>